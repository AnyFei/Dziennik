<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EkranGlowny">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/przedmiotRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Przedmiot" />

                <RadioButton
                    android:id="@+id/klasaRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Klasa" />

                <RadioButton
                    android:id="@+id/planRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Zajecia" />
            </RadioGroup>

            <Button
                android:id="@+id/dodajBtn"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:text="DODAJ " />

            <Spinner
                android:id="@+id/klasaSpnr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/pokazBtn"
                android:layout_width="368dp"
                android:layout_height="171dp"
                android:text="Pokaz plan"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="453dp" />

            <Button
                android:id="@+id/usunWszystko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>